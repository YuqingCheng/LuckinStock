<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yuqingcheng.luckinstock.SignupLoginActivity">

    <ImageButton
        android:id="@+id/avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:adjustViewBounds="true"
        android:background="@color/ap_transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/default_avatar" />

    <EditText
        android:id="@+id/loginUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Enter username"
        android:inputType="textPersonName"
        android:layout_below="@+id/avatar"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/loginPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/loginUsername"
        android:layout_below="@+id/loginUsername"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Enter password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/signupLoginin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:onClick="handleSignupLoginin"
        android:text="Sign Up" />

    <TextView
        android:id="@+id/changeSignupMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signupLoginin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Having an account? Login in here."
        android:textAlignment="center"
        android:textColor="@color/colorAccent" />
</RelativeLayout>
